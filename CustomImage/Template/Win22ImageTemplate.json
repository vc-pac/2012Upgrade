{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
      },
      "api-version": {
        "type": "string"
      },
      "svclocation": {
        "type": "string"
      }
    },
    "variables": {},
    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
          "imagebuilderTemplate": "windows2022",
          "userIdentity": "enabled"
        },
        "identity": {
          "type": "UserAssigned",
          "userAssignedIdentities": {
            "/subscriptions/9b56bf17-34a1-41de-b5a2-7ce42c0b1382/resourcegroups/ess-spt-dev-rg/providers/Microsoft.ManagedIdentity/userAssignedIdentities/spt-aibIdentity-dev-mi": {}
          }
        },
        "properties": {
          "buildTimeoutInMinutes": 60,
          "vmProfile": {
            "vmSize": "Standard_B2ms",
            "osDiskSizeGB": 127
          },
          "source": {
            "type": "PlatformImage",
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2022-datacenter",
            "version": "latest"
          },
          "customize": [
            {
                "type": "PowerShell",
                "name": "InstallDependencies",
                "runElevated": false,
                "scriptUri": "https://raw.githubusercontent.com/vc-pac/2012Upgrade/CustomImage-lekkalasr/CustomImage/InstallDependencies.ps1"
            },
          ],
          "distribute": [
            {
              "type": "SharedImage",
              "galleryImageId": "/subscriptions/9b56bf17-34a1-41de-b5a2-7ce42c0b1382/resourceGroups/ess-spt-dev-rg/providers/Microsoft.Compute/galleries/spt_devopsss_dev_sig/images/win2022wvd",                 
              "location": "eastus2",
			  "runOutputName": "sigOutput",
              "runOutputName": "Windows2022",
              "artifactTags": {
                "source": "azVmImageBuilder",
                "baseosimg": "windows2022"
              },
			  "replicationRegions": [
                      "eastus2"
                    ]
            }
          ]
        }
      }
    ]
  }
  





